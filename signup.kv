MDScreen:
    name: "signup"
    MDFloatLayout:

        Image:
            source: "assets/Signup_Page_BG.jpg"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 0.1, 0.09, 0.22, 1  
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"

        MDLabel:
            text: "Join SyncFit"
            bold: True
            font_style: "H4"
            font_size: "21sp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": .72}
            theme_text_color: "Custom"
            text_color: rgba(6, 1, 76)  

        MDTextField:
            hint_text: "Name"
            size_hint: .85, None  
            pos_hint: {"center_x": 0.5, "center_y": 0.62}
            mode: "rectangle"
            line_color_focus: 0.1, 0.09, 0.22, 1
            line_color_normal: 0.8, 0.8, 0.8, 1
            multiline: False
            padding: [dp(10), dp(10)] 
            foreground_color: 0, 0, 0, 1 

        MDTextField:
            hint_text: "Email"
            size_hint: .85, None  
            pos_hint: {"center_x": 0.5, "center_y": 0.51}
            mode: "rectangle"
            line_color_focus: 0.1, 0.09, 0.22, 1
            line_color_normal: 0.8, 0.8, 0.8, 1
            multiline: False
            padding: [dp(10), dp(10)] 
            foreground_color: 0, 0, 0, 1

        MDTextField:
            id: password_field
            hint_text: "Password"
            size_hint: .85, None
            height: dp(48)
            pos_hint: {"center_x": 0.5, "center_y": 0.40}
            mode: "rectangle"
            line_color_focus: 0.1, 0.09, 0.22, 1
            line_color_normal: 0.8, 0.8, 0.8, 1
            multiline: False
            password: True  
            padding: [dp(10), dp(10)] 
            foreground_color: 0, 0, 0, 1

        MDIconButton:
            icon: "eye-off"
            pos_hint: {"center_x": 0.86, "center_y": 0.40}
            theme_text_color: "Custom"
            text_color: 0.1, 0.09, 0.22, 1
            on_release: app.toggle_password_visibility(password_field, self)

        MDTextField:
            id: confirm_password_field
            hint_text: "Confirm Password"
            size_hint: .85, None
            height: dp(48)
            pos_hint: {"center_x": 0.5, "center_y": 0.29}
            mode: "rectangle"
            line_color_focus: 0.1, 0.09, 0.22, 1
            line_color_normal: 0.8, 0.8, 0.8, 1
            multiline: False
            password: True  
            padding: [dp(10), dp(10)] 
            foreground_color: 0, 0, 0, 1

        MDIconButton:
            icon: "eye-off"
            pos_hint: {"center_x": 0.86, "center_y": 0.29}
            theme_text_color: "Custom"
            text_color: 0.1, 0.09, 0.22, 1
            on_release: app.toggle_password_visibility(confirm_password_field, self)

        MDBoxLayout:
            size_hint: .8, None
            height: self.minimum_height
            pos_hint: {"center_x": 0.5, "center_y": 0.20}
            orientation: "horizontal"
            spacing: dp(10)

            MDCheckbox:
                size_hint: None, None
                size: dp(20), dp(20)
                pos_hint: {"center_y": 0.5}

            MDLabel:
                text: "Iâ€™m agree to The [color=0000FF]Terms of Service[/color] and [color=0000FF]Privacy Policy[/color]"
                font_size: "11sp"
                halign: "left"
                theme_text_color: "Custom"
                text_color: 0.1, 0.09, 0.22, 1
                markup: True

        Button:
            text: "Join Now"
            size_hint: .8, .060
            pos_hint: {"center_x": .5, "center_y": .12}
            background_color: 0, 0, 0, 0
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "join_now"
            canvas.before:
                Color:  
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        MDTextButton:
            text: "[color=000000]Do you have an account?[/color] [color=0000FF]Sign in[/color]"
            font_size: "11sp"
            pos_hint: {"center_x": 0.37, "center_y": 0.06}
            theme_text_color: "Custom"
            text_color: 0.1, 0.09, 0.22, 1
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"
            markup: True




