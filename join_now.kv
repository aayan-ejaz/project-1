MDScreen:
    name: "join_now"
    MDFloatLayout:

        Image:
            source: "assets/Success_Notification_ BG.jpg"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 0.1, 0.09, 0.22, 1  
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "signup"
        Image:
            source: "assets/Tick_Icon.png"
            size_hint: .5, .5
            pos_hint: {"center_x": .5, "center_y": .65}

        MDLabel:
            text: "You've successfully\n Joined SyncFit"
            bold: True
            font_style: "H6"
            font_size: "21sp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.46}
            theme_text_color: "Custom"
            text_color: rgba(6, 1, 76) 
        
        Button:
            text: "OK"
            size_hint: None, .059
            pos_hint: {"center_x": .5, "center_y": .32}
            background_color: 0, 0, 0, 0
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"
            canvas.before:
                Color:  
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]


