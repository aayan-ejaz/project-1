MDScreen:
    name: "login"
    MDFloatLayout:

        Image:
            source: "assets/Login_Page_BG.jpg"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 0.1, 0.09, 0.22, 1  
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"

        MDLabel:
            text: "Welcome Back!"
            bold: True
            font_style: "H4"
            font_size: "16sp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": .68}
            theme_text_color: "Custom"
            text_color: rgba(6, 1, 76)

        MDLabel:
            text: "Login to SyncFit"
            bold: True
            font_style: "H6"
            font_size: "21sp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.62}
            theme_text_color: "Custom"
            text_color: rgba(6, 1, 76) 

        MDBoxLayout:
            orientation: "horizontal"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .53}
            md_bg_color: 1, 1, 1, 1  
            padding: dp(10)
            spacing: dp(10)
            radius: [5]  
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

            Image:
                source: "assets/search.png"  
                size_hint: None, None
                size: dp(20), dp(20)

            MDLabel:
                text: "Sign in with Google"
                font_style: "Subtitle2"
                halign: "center"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1  

        Button:
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .53}
            background_color: 0, 0, 0, 0  
            on_release:
                root.manager.transition.direction = "up"
                root.manager.current = "main"

        MDBoxLayout:
            orientation: "horizontal"
            size_hint: .80, None
            height: dp(25)
            pos_hint: {"center_x": .5, "center_y": .47}
            spacing: dp(2)

            MDSeparator:
                height: dp(1)

            MDLabel:
                text: "or"
                halign: "center"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1  

            MDSeparator:
                height: dp(1)

        MDTextField:
            hint_text: "Enter your email"
            size_hint: .85, None  
            pos_hint: {"center_x": 0.5, "center_y": 0.38}
            mode: "rectangle"
            line_color_focus: 0.1, 0.09, 0.22, 1
            line_color_normal: 0.8, 0.8, 0.8, 1
            multiline: False
            padding: [dp(10), dp(10)] 
            foreground_color: 0, 0, 0, 1 

        MDTextField:
            id: password_field
            hint_text: "Enter your password"
            size_hint: .85, None  
            height: dp(0.99)  
            pos_hint: {"center_x": 0.5, "center_y": 0.26}
            mode: "rectangle"
            line_color_focus: 0.1, 0.09, 0.22, 1
            line_color_normal: 0.8, 0.8, 0.8, 1
            multiline: False
            password: True  
            padding: [dp(10), dp(10)] 
            foreground_color: 0, 0, 0, 1 

        MDIconButton:
            icon: "eye-off"
            pos_hint: {"center_x": 0.86, "center_y": 0.26}
            theme_text_color: "Custom"
            text_color: 0.1, 0.09, 0.22, 1
            on_release: app.toggle_password_visibility(password_field, self)

        MDTextButton:
            text: "[color=0000FF]Forget Password?[/color]"
            font_size: "11sp"
            pos_hint: {"center_x": 0.79, "center_y": 0.18}
            theme_text_color: "Custom"
            text_color: 0.1, 0.09, 0.22, 1
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "rest"
            markup: True
        Button:
            text: "Log in"
            size_hint: .8, .060
            pos_hint: {"center_x": .5, "center_y": .12}
            background_color: 0, 0, 0, 0
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "home"
            canvas.before:
                Color:  
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        
        MDTextButton:
            text: "[color=000000]Don't have an account?[/color] [color=0000FF]Sign up[/color]"
            font_size: "11sp"
            pos_hint: {"center_x": 0.37, "center_y": 0.05}
            theme_text_color: "Custom"
            text_color: 0.1, 0.09, 0.22, 1
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
            markup: True

                    



